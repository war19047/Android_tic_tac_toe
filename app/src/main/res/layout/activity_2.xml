<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity2">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/player1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1: 0"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/player2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 2: 0"
            android:layout_below="@id/player1_text"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/reset_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="33dp"
            android:text="New Board"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/location_00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/default_outlined_button_style"
            android:textSize="60sp"
            app:backgroundTint="#756F6F"
            />

        <Button
            android:id="@+id/location_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/default_outlined_button_style"
            android:textSize="60sp"
            app:backgroundTint="#756F6F" />

        <Button
            android:id="@+id/location_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/default_outlined_button_style"
            android:textSize="60sp"
            app:backgroundTint="#756F6F" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/location_10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/default_outlined_button_style"
            android:textSize="60sp"
            app:backgroundTint="#756F6F" />

        <Button
            android:id="@+id/location_11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/default_outlined_button_style"
            android:textSize="60sp"
            app:backgroundTint="#756F6F" />

        <Button
            android:id="@+id/location_12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/default_outlined_button_style"
            android:textSize="60sp"
            app:backgroundTint="#756F6F" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/location_20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/default_outlined_button_style"
            android:textSize="60sp"
            app:backgroundTint="#756F6F" />

        <Button
            android:id="@+id/location_21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/default_outlined_button_style"
            android:textSize="60sp"
            app:backgroundTint="#756F6F" />

        <Button
            android:id="@+id/location_22"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/default_outlined_button_style"
            android:textSize="60sp"
            app:backgroundTint="#756F6F" />

    </LinearLayout>



</LinearLayout>